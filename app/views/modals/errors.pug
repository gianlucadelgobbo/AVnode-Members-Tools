
.modal-error.modal.fade
	.modal-dialog
		.modal-content
			div.modal-header
				button.close(data-dismiss='modal') x
				- if(typeof __ === 'function')
					h4.modal-title=__("Error")
				- else
					h4.modal-title="Error"
			div.modal-body
				- if(typeof __ === 'function')
					p.subheading=__("It looks like there was a problem")
				- else
					p.subheading="It looks like there was a problem"
				ul
			div.modal-footer
				- if(typeof __ === 'function')
					button(data-dismiss="modal").cancel.btn=__("Cancel")
					button(data-dismiss="modal")#ok.btn.btn-warning=__("OK")
				- else
					button(data-dismiss="modal").cancel.btn="Cancel"
					button(data-dismiss="modal")#ok.btn.btn-warning="OK"
