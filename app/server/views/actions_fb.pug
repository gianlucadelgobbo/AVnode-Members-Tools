#res_FB
  table.table
    tr
      td ID
      td=results.id
    tr
      td=__("From")
      td=results.from.name
    tr
      td=__("Post date")
      td=results.created_time
  table.table
    tr
      td(colspan=2)=results.checkdate
    tr
      td=__("Likes")
      td=results.likes.data.length
    tr
      td=__("Comments")
      td=results.comments && results.comments.data && results.comments.data.length ? results.comments.data.length : 0
    tr
      td=__("Shares")
      td
        p=__("Total") + ": " + results.shares.count
        - var shares = 0
        - var comments = 0
        - var likes = 0
        each item in results.sharedposts.data
          -console.log(item)
          - shares+=item.shares && item.shares.count ? parseInt(item.shares.count) : 0
          - comments+=item.comments && item.comments.data ? item.comments.data.length : 0
          - likes+=item.likes && item.likes.data ? item.likes.data.length : 0
        p=__("Shares") + ": " + shares
        p=__("Comments") + ": " + comments
        p=__("Likes") + ": " + likes
