h1.page-title=__("Clients")
div
	- if (typeof msg !== "undefined" && typeof msg.e !== "undefined" && msg.e.length) {
		.alert.alert-danger
			h4=__("There are some errors")
			ul
				- for(var a=0;a<msg.e.length;a++)
					li=msg.e[a].m
	- }
	- if (typeof msg !== "undefined" && typeof msg.c !== "undefined" && msg.c.length) {
		.alert.alert-success
			h4=__("There are some messages")
			ul
				- for(var a=0;a<msg.c.length;a++)
					li=msg.c[a].m
	- }
	table.table
		thead
			tr
				th.tabActions=__("Actions")
				th=__("Client")
				th=__("Invoices")
				th=__("VAT number")
				th=__("Fiscal code")
				th=__("Address")
				th=__("ZIP code")
				th=__("City")
		tbody
			each x in result
				tr
					td
						div.btn-group
							a.btn.btn-info(href="/invoices/?client="+x._id)=__("Invoices")
							button.btn.btn-info.dropdown-toggle(data-toggle="dropdown")
								span.caret
							ul.dropdown-menu
								li
									a(href="/client/?id="+x._id)=__("Edit")
								li
									a(href="/clients/?id="+x._id+"&del="+1)=__("Delete")
					td
						a(href="/client/?id="+x._id)=x.name
					td.text-center=x.invoicesCount
					td=x.vat_number
					td=x.fiscal_code
					td=x.address.street
					td=x.address.zipcode
					td=x.address.city
					
